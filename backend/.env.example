# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=neurasec.vercel.app,localhost,127.0.0.1

# Database settings
DB_NAME=neurasec
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email settings (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
DEFAULT_FROM_EMAIL=noreply@neurasec.com

# Admin credentials (for initial admin user)
ADMIN_EMAIL=admin@neurasec.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password

# Security settings
ALGORITHM=HS256

# API Server settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL for CORS
NEXT_PUBLIC_APP_URL=https://neurasec.vercel.app
NODE_ENV=production

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://your_username:your_password@your_host:your_port/your_database

# PostgreSQL Connection (Supabase Transaction Pooler)
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=your_postgres_port
POSTGRES_DATABASE=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_postgres_password

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email settings (SMTP)
# Note: For Gmail, you need to:
# 1. Enable 2-Step Verification: https://myaccount.google.com/security
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use that App Password below instead of your regular password
EMAIL_USERNAME=your_email@gmail.com
EMAIL_FROM=your_email@gmail.com
USE_SENDGRID=false

# For development/testing without a real SMTP service, you can use Mailtrap:
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USERNAME=your_mailtrap_username
# EMAIL_PASSWORD=your_mailtrap_password

# API Keys for URL Scanner
# AlienVault OTX API Key
OTX_API_KEY=your_otx_api_key_here

# VirusTotal API Key
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret Key (generate a secure random string for production)
SECRET_KEY="CHANGEME_super_secret_key_for_jwt_token_generation"

# Admin API Key (generate a secure random string for production)
ADMIN_API_KEY="CHANGEME_admin_api_key"

# Google OAuth (required for Google Sign-In)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback" 